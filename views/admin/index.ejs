<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard | UMS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/AdminDashboard.css">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
  <div id="sidebar">
    <div>
      <div class="brand">
        <img src="/images/logo_college.png" alt="UMS Logo" />
        <h5>Uniform Management System</h5>
      </div>
      <ul class="nav flex-column nav-links mt-3">
        <li class="nav-item">
          <a href="/admin/index" class="nav-link active">
            <i class="bi bi-speedometer2"></i> Dashboard
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/uniform" class="nav-link">
            <i class="bi bi-plus-lg"></i> Add Uniform
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/collection" class="nav-link">
            <i class="bi bi-collection"></i> Uniforms
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/users" class="nav-link">
            <i class="bi bi-people"></i> Users
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/request" class="nav-link">
            <i class="bi bi-inbox"></i> Uniform Requests
          </a>
        </li>
        <li class="nav-item">
          <a href="/admin/history" class="nav-link">
            <i class="bi bi-clock-history"></i> History
          </a>
        </li>
      </ul>
    </div>
    <div class="sidebar-footer">
      <button id="logoutBtn" class="logout-btn d-flex align-items-center justify-content-center gap-2">
        <i class="bi bi-box-arrow-right"></i> Logout
      </button>
    </div>
  </div>

  <div class="main-content">
    <h2>Dashboard</h2>
    <hr>
    
    <div class="row g-3 kpi-cards">
      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Total Users</h5>
              <p class="card-text text-light fs-3"><%= kpis.totalUsers %></p>
            </div>
            <i class="bi bi-people-fill kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Total Uniforms</h5>
              <p class="card-text text-light fs-3"><%= kpis.totalUniforms %></p>
            </div>
            <i class="bi bi-shirt-fill kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Total Requests</h5>
              <p class="card-text text-light  fs-3"><%= kpis.totalRequests %></p>
            </div>
            <i class="bi bi-inbox-fill kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Pending Requests</h5>
              <p class="card-text text-light  fs-3"><%= kpis.pendingRequests %></p>
            </div>
            <i class="bi bi-hourglass-split kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Approved Requests</h5>
              <p class="card-text text-light fs-3"><%= kpis.approvedRequests %></p>
            </div>
            <i class="bi bi-check-circle-fill kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Rejected Requests</h5>
              <p class="card-text text-light fs-3"><%= kpis.rejectedRequests %></p>
            </div>
            <i class="bi bi-x-circle-fill kpi-icon"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title text-light">Cancelled Requests</h5>
              <p class="card-text text-light fs-3"><%= kpis.cancelledRequests %></p>
            </div>
            <i class="bi bi-x-circle-fill kpi-icon text-light"></i>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        <div class="card shadow-sm kpi-card">
          <div class="card-body d-flex align-items-center justify-content-between">
            <div>
              <h5 class="card-title">Completed Requests</h5>
              <p class="card-text text-light fs-3"><%= kpis.completedRequests %></p>
            </div>
            <i class="bi bi-box-seam kpi-icon"></i>
          </div>
        </div>
      </div>
    </div>

    <div class="row g-4 charts-light mt-3">

      <div class="col-md-6">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-mortarboard me-2"></i>Users per Course
            </h5>
            <canvas id="courseChart" height="120"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-people me-2"></i>Users per Year Level
            </h5>
            <canvas id="yearChart" height="120"></canvas>
          </div>
        </div>
      </div>

    </div>

    <div class="row g-4 charts-light mt-3">

      <div class="col-md-6">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-bar-chart-fill me-2"></i>Uniform Trend by Category
            </h5>
            <canvas id="uniformCategoryChart" height="120"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-upc-scan me-2"></i>Most Requested Sizes
            </h5>
            <canvas id="mostRequestedSizesChart" height="120"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6 mt-3">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-check-circle-fill me-2"></i>Completed Requests Per Month
            </h5>
            <canvas id="completedRequestsChart" height="120"></canvas>
          </div>
        </div>
      </div>

      <div class="col-md-6 mt-3">
        <div class="card chart-card shadow-sm border-0 rounded-3">
          <div class="card-body text-center">
            <h5 class="card-title mb-3">
              <i class="bi bi-arrow-up-right-circle-fill me-2"></i>Predicted Requests (Next 3 Months)
            </h5>
            <canvas id="futureTrendChart" height="120"></canvas>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/js/Logout.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script>
    const usersPerCourse = <%- JSON.stringify(usersPerCourse.length ? usersPerCourse : [{ _id: 'Dummy Course', count: 5 }]) %>;
    const usersPerYear = <%- JSON.stringify(usersPerYear.length ? usersPerYear : [{ _id: '1st Year', count: 10 }]) %>;
    const uniformTrendCategory = <%- JSON.stringify(uniformTrendCategory.length ? uniformTrendCategory : [{ _id: { category: 'PE', month: 1, year: 2025 }, count: 8 }]) %>;
    const mostRequestedSizes = <%- JSON.stringify(mostRequestedSizes.length ? mostRequestedSizes : [{ _id: 'M', count: 7 }]) %>;
    const completedPerMonth = <%- JSON.stringify(completedPerMonth.length ? completedPerMonth : [{ _id: { year: 2025, month: 1 }, count: 5 }]) %>;
    const futureTrends = <%- JSON.stringify(futureTrends.length ? futureTrends : [10, 15, 12]) %>;

    const getDimBlueGradient = (ctx) => {
      const gradient = ctx.createLinearGradient(0, 0, 0, 250);
      gradient.addColorStop(0, 'rgba(13,110,253,0.6)');
      gradient.addColorStop(1, 'rgba(13,110,253,0.2)');
      return gradient;
    };

    const commonOptions = {
      responsive: true,
      plugins: { legend: { display: false }, tooltip: { mode: 'index', intersect: false } },
      scales: { 
        x: { ticks: { color: '#1a1a1a' }, grid: { color: '#e8e8e8' } },
        y: { ticks: { color: '#1a1a1a', stepSize: 1 }, grid: { color: '#f0f0f0' } }
      }
    };

    new Chart(document.getElementById('courseChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: usersPerCourse.map(c => c._id),
        datasets: [{ data: usersPerCourse.map(c => c.count), backgroundColor: getDimBlueGradient(document.getElementById('courseChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });

    new Chart(document.getElementById('yearChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: usersPerYear.map(y => y._id),
        datasets: [{ data: usersPerYear.map(y => y.count), backgroundColor: getDimBlueGradient(document.getElementById('yearChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });

    new Chart(document.getElementById('uniformCategoryChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: uniformTrendCategory.map(u => `${u._id.year}-${u._id.month}-${u._id.category}`),
        datasets: [{ data: uniformTrendCategory.map(u => u.count), backgroundColor: getDimBlueGradient(document.getElementById('uniformCategoryChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });

    new Chart(document.getElementById('mostRequestedSizesChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: mostRequestedSizes.map(s => s._id),
        datasets: [{ data: mostRequestedSizes.map(s => s.count), backgroundColor: getDimBlueGradient(document.getElementById('mostRequestedSizesChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });

    new Chart(document.getElementById('completedRequestsChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: completedPerMonth.map(c => `${c._id.year}-${c._id.month}`),
        datasets: [{ data: completedPerMonth.map(c => c.count), backgroundColor: getDimBlueGradient(document.getElementById('completedRequestsChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });

    new Chart(document.getElementById('futureTrendChart').getContext('2d'), {
      type: 'bar',
      data: {
        labels: ['Next Month', '2 Months Ahead', '3 Months Ahead'],
        datasets: [{ data: futureTrends, backgroundColor: getDimBlueGradient(document.getElementById('futureTrendChart').getContext('2d')), borderColor: '#0d6efd', borderWidth: 1, borderRadius: 6 }]
      },
      options: commonOptions
    });
  </script>
</body>
</html>
